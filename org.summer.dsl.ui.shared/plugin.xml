<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="overridingGuiceModule" name="overridingGuiceModule" schema="schema/overridingGuiceModule.exsd"/>
   <extension-point id="sharedStateContributingModule" name="sharedStateContributingModule" schema="schema/sharedStateContributingModule.exsd"/>
   <extension
        id="xtextBuilder"
        name="%DslBuilder.name"
        point="org.eclipse.core.resources.builders">
     <builder
           hasNature="true">
        <run
              class="org.summer.dsl.ui.shared.internal.ExecutableExtensionFactory">
             <parameter name="guicekey" value="org.eclipse.core.resources.IncrementalProjectBuilder"/>
        </run>
     </builder>
  </extension>
  <extension
        id="xtextNature"
        name="%DslNature.name"
        point="org.eclipse.core.resources.natures">
     <runtime>
        	<run
              class="org.summer.dsl.builder.nature.XtextNature">
      	</run>
     </runtime>
     <builder
           id="org.summer.dsl.ui.shared.xtextBuilder">
     </builder>
  </extension>
  <extension point="org.eclipse.ui.menus">
       <menuContribution
            locationURI="menu:navigate?after=open.ext4">
         <command commandId="org.summer.dsl.ui.shared.OpenXtextElementCommand"/>
      </menuContribution>
   </extension>
  <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.summer.dsl.builder.addNature"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="org.summer.dsl.builder.nature.ToggleXtextNatureAction"
               id="org.summer.dsl.builder.action.AddXtextNatureAction"
               label="%DslNatureAddAction.label"
               menubarPath="org.eclipse.ui.projectConfigure/additions"
               >
         </action>
         <visibility>
         	<not>
	            <objectState
    	              name="nature"
        	          value="org.summer.dsl.ui.shared.xtextNature">
            	</objectState>
            </not>
         </visibility>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="org.summer.dsl.builder.removeNature"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="org.summer.dsl.builder.nature.ToggleXtextNatureAction"
               id="org.summer.dsl.builder.action.RemoveXtextNatureAction"
               label="%DslNatureRemoveAction.label"
               menubarPath="org.eclipse.ui.projectConfigure/additions"
               >
         </action>
         <visibility>
               <objectState
    	              name="nature"
        	          value="org.summer.dsl.ui.shared.xtextNature">
            	</objectState>
         </visibility>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            adaptable="true"
            icon="icons/nature_overlay.png"
            id="org.summer.dsl.builder.nature.overlay"
            label="Xtext Nature"
            lightweight="true"
            location="TOP_RIGHT"
            state="true">
         <enablement>
         	<and>
		     	<objectClass
		              name="org.eclipse.core.resources.IProject"/>
		        <objectState
		              name="nature"
		              value="org.summer.dsl.ui.shared.xtextNature">
		        </objectState>
            </and>
         </enablement>
      </decorator>
   </extension>
   <!-- open Xtext element -->
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.ui.category.window"
            description="%OpenModelElementCommand.description"
            id="org.summer.dsl.ui.shared.OpenXtextElementCommand"
            name="%OpenModelElementCommand.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.summer.dsl.ui.shared.OpenXtextElementCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+SHIFT+F3">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.summer.dsl.ui.shared.internal.ExecutableExtensionFactory:org.eclipse.xtext.ui.search.OpenXtextElementHandler"
            commandId="org.summer.dsl.ui.shared.OpenXtextElementCommand">
      </handler>
   </extension>
 	<extension point="org.eclipse.search.searchResultViewPages">
    	<viewPage
          class="org.summer.dsl.ui.shared.internal.ExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.ReferenceSearchViewPage"
          icon="icons/searchpage.gif"
          id="org.eclipse.xtext.ui.editor.findref.SearchViewPage"
          searchResultClass="org.eclipse.xtext.ui.editor.findrefs.ReferenceSearchResult">
    	</viewPage>
 	</extension>
 	<extension
         point="org.eclipse.jdt.core.compilationParticipant">
      <compilationParticipant
            class="org.summer.dsl.ui.shared.internal.ExecutableExtensionFactory:org.summer.dsl.builder.smap.DebugSourceInstallingCompilationParticipant"
            createsProblems="false"
            id="org.summer.dsl.model.types.shared.smapCompilationParticipant"
            modifiesEnvironment="false"
            requiredSourceLevel="1.4">
      </compilationParticipant>
   </extension>
  <extension
        point="org.summer.dsl.ui.shared.sharedStateContributingModule">
     <module
           class="org.summer.dsl.ui.shared.internal.DefaultSharedContribution">
     </module>
  </extension>
  <extension
        point="org.summer.dsl.ui.shared.sharedStateContributingModule">
     <module
           class="org.summer.dsl.ui.shared.internal.SharedContributionWithJDT">
     </module>
  </extension>
</plugin>
